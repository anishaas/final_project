
@{
    ViewBag.Title = "SandBox1";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title id="pageTitle"></title>
    <!--@Html.Partial(@Url.Content("~/Views/SandBoxViews/userViewHeader.cshtml"))-->
    <link type="text/css" rel="stylesheet" href="../../MaterialDesignAssets/css/theme-default/libs/select2/select2.css?1424887856" />
    <link type="text/css" rel="stylesheet" href="../../MaterialDesignAssets/css/theme-default/libs/multi-select/multi-select.css?1424887857" />
</head>
<body class="menubar-hoverable header-fixed menubar-pin ">
    <!-- BEGIN BASE-->
    <div id="base">

        <!-- BEGIN OFFCANVAS LEFT -->
        <div class="offcanvas">
        </div><!--end .offcanvas-->
        <!-- END OFFCANVAS LEFT -->
        <!-- BEGIN CONTENT-->
        <div id="content">
            <section>
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="text-primary">Song Search</h1>
                    </div><!--end .col -->
                    <div class="col-lg-8">
                        <article class="margin-bottom-xxl">
                            <p class="lead">
                                Search with song title, genre, artist, album, or rating
                            </p>
                        </article>
                    </div><!--end .col -->
                </div><!--end .row -->
                <!-- BEGIN BASIC ELEMENTS -->
                <div class="row">
                    <div class="col-lg-offset-1 col-md-8 col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <form class="form" role="form">
                                    <div class="form-group floating-label">
                                        <input type="text" class="form-control" id="songTitle">
                                        <label for="regular2">Song Title</label>
                                        <p class="help-block">(Shake It Off)</p>
                                    </div>
                                    <div class="form-group floating-label">
                                        <input type="text" class="form-control" id="songArtist">
                                        <label for="password2">Song Artist</label>
                                        <p class="help-block">Taylor Swift</p>
                                    </div>
                                    <div class="form-group floating-label">
                                        <input type="text" class="form-control" id="songAlbum">
                                        <label for="placeholder2">Song Album</label>
                                        <p class="help-block">Red</p>
                                    </div>
                                </form>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                        <em class="text-caption">Select Genres Below</em>
                    </div><!--end .col -->
                </div><!--end .row -->
                <!-- END BASIC ELEMENTS -->
                <div class="row">
                    <div class="col-lg-offset-1 col-md-8">
                        <div class="card card-underline">
                            <div class="card-head">
                                <header>Genre Selection</header>
                                <div class="tools">
                                    <div class="btn-group">
                                        <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
                                    </div>
                                </div>
                            </div><!--end .card-head -->
                            <div class="card-body">
                                <ul id="genreListContainer" class="list" data-sortable="true">
                                </ul>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                        <em class="text-caption">Select a Rating Range Below</em>
                    </div><!--end .col -->
                </div><!--end .row -->
                <div class="row">
                    <div class="col-lg-offset-1 col-md-8">
                        <div class="card card-underline">
                            <div class="card-head">
                                <header>Rating Selection</header>
                                <div class="tools">
                                    <div class="btn-group">
                                        <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
                                    </div>
                                </div>
                            </div><!--end .card-head -->
                            <div class="card-body">
                                <form class="form-horizontal" role="form">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Filter Type</label>
                                        <div class="col-sm-9">
                                            <label class="radio-inline radio-styled">
                                                <input class="filterTypeInput" type="radio" name="inlineRadioOptions" value="greater"><span>Greater Than</span>
                                            </label>
                                            <label class="radio-inline radio-styled">
                                                <input class="filterTypeInput" type="radio" name="inlineRadioOptions" value="less"><span>Less Than</span>
                                            </label>
                                            <label class="radio-inline radio-styled">
                                                <input class="filterTypeInput" type="radio" name="inlineRadioOptions" value="between"><span>Between</span>
                                            </label>
                                        </div><!--end .col -->
                                    </div><!--end .form-group -->
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="ratingInput1">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="ratingInput2">
                                    </div>
                                </form>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                        <em class="text-caption">See search results below</em>
                        <button id="songSearchBtn" type="button" class="btn ink-reaction btn-raised btn-primary">Search</button>
                    </div><!--end .col -->
                </div><!--end .row -->

                <!-- BEGIN DATATABLE 1 -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table id="datatable1" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Song Title</th>
                                        <th>Song Artist</th>
                                        <th class="sort-numeric">Song Price</th>
                                        <th class="sort-numeric">Song Rating</th>
          
                                    </tr>
                                </thead>
                                <tbody id="dataContainer">
                                    <tr class="">
                                        <td>Trident</td>
                                        <td>Internet Explorer 4.0</td>
                                        <td>Win 95+</td>
                                        <td>4</td>
                                    </tr>
                                    <tr class="">
                                        <td>Trident</td>
                                        <td>Internet Explorer 5.0</td>
                                        <td>Win 95+</td>
                                        <td>5</td>
   
                                    </tr>
                                    <tr class="">
                                        <td>Trident</td>
                                        <td>Internet Explorer 5.5</td>
                                        <td>Win 95+</td>
                                        <td>5.5</td>
       
                                    </tr>
                                    <tr class="">
                                        <td>Trident</td>
                                        <td>Internet Explorer 6</td>
                                        <td>Win 98+</td>
                                        <td>6</td>
         
                                    </tr>
                                </tbody>
                            </table>
                        </div><!--end .table-responsive -->
                    </div><!--end .col -->
                </div><!--end .row -->
                <!-- END DATATABLE 1 -->
        </section>
        </div><!--end #content-->
        <!-- END CONTENT -->
        <div id="htmlComponentsContainer" style="display:none;">
            @Html.Partial(@Url.Content("~/Views/SandBoxViews/userViewHTMLComponents.cshtml"))
        </div>
    </div><!--end #base-->
    <!-- END BASE -->
    <!-- BEGIN JAVASCRIPT -->
    <!-- END JAVASCRIPT -->
    
</body>
</html>


