
@{
    ViewBag.Title = "PA Consulting";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!--@Html.Partial(@Url.Content("~/Views/SandBoxViews/userViewHeader.cshtml"))-->
    <link type="text/css" rel="stylesheet" href="../../MaterialDesignAssets/css/theme-default/libs/select2/select2.css?1424887856" />
    <link type="text/css" rel="stylesheet" href="../../MaterialDesignAssets/css/theme-default/libs/multi-select/multi-select.css?1424887857" />
</head>
<body class="menubar-hoverable header-fixed menubar-pin ">
    <!-- BEGIN BASE-->
    <div id="base">

        <!-- BEGIN OFFCANVAS LEFT -->
        <div class="offcanvas">
        </div><!--end .offcanvas-->
        <!-- END OFFCANVAS LEFT -->
        <!-- BEGIN CONTENT-->
        <div id="content">
            <section>
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="text-primary">Artist Search</h1>
                    </div><!--end .col -->
                    <div class="col-lg-8">
                        <article class="margin-bottom-xxl">
                            <p class="lead">
                                Search with artist name, genre, or rating
                            </p>
                        </article>
                    </div><!--end .col -->
                </div><!--end .row -->
                <!-- BEGIN BASIC ELEMENTS -->
                <div class="row">
                    <div class="col-lg-offset-1 col-md-8 col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <form class="form" role="form">
                                    <div class="form-group floating-label">
                                        <input type="text" class="form-control" id="artistName">
                                        <label for="regular2">Artist Name</label>
                                        <p class="help-block">(Drake)</p>
                                    </div>
                                </form>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                        <em class="text-caption">Select Genres Below</em>
                    </div><!--end .col -->
                </div><!--end .row -->
                <!-- END BASIC ELEMENTS -->
                <div class="row">
                    <div class="col-lg-offset-1 col-md-8">
                        <div class="card card-underline">
                            <div class="card-head">
                                <header>Genre Selection</header>
                                <div class="tools">
                                    <div class="btn-group">
                                        <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
                                    </div>
                                </div>
                            </div><!--end .card-head -->
                            <div class="card-body">
                                <ul id="genreListContainerArtist" class="list" data-sortable="true"></ul>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                        <em class="text-caption">Select a Rating Range Below</em>
                    </div><!--end .col -->
                </div><!--end .row -->
                <div class="row">
                    <div class="col-lg-offset-1 col-md-8">
                        <div class="card card-underline">
                            <div class="card-head">
                                <header>Rating Selection</header>
                                <div class="tools">
                                    <div class="btn-group">
                                        <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
                                    </div>
                                </div>
                            </div><!--end .card-head -->
                            <div class="card-body">
                                <form class="form-horizontal" role="form">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Filter Type</label>
                                        <div class="col-sm-9">
                                            <label class="radio-inline radio-styled">
                                                <input class="filterTypeInput" type="radio" name="inlineRadioOptions" value="greater"><span>Greater Than</span>
                                            </label>
                                            <label class="radio-inline radio-styled">
                                                <input class="filterTypeInput" type="radio" name="inlineRadioOptions" value="less"><span>Less Than</span>
                                            </label>
                                            <label class="radio-inline radio-styled">
                                                <input class="filterTypeInput" type="radio" name="inlineRadioOptions" value="between"><span>Between</span>
                                            </label>
                                        </div><!--end .col -->
                                    </div><!--end .form-group -->
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="ratingInput1">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="ratingInput2">
                                    </div>
                                </form>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                        <em class="text-caption">See search results below</em>
                        <button id="artistSearchBtn" type="button" class="btn ink-reaction btn-raised btn-primary">Search</button>
                    </div><!--end .col -->
                </div><!--end .row -->
                <br /><br />
                <!-- BEGIN DATATABLE 1 -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table id="datatable1" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Artist Name</th>
                                        <th>Artist Genres</th>
                                        <th class="sort-numeric">Artist Rating</th>

                                    </tr>
                                </thead>
                                <tbody id="dataContainer"></tbody>
                            </table>
                        </div><!--end .table-responsive -->
                    </div><!--end .col -->
                </div><!--end .row -->
                <!-- END DATATABLE 1 -->
            </section>
        </div><!--end #content-->
        <!-- END CONTENT -->
        <div id="htmlComponentsContainer" style="display:none;">
            @Html.Partial(@Url.Content("~/Views/SandBoxViews/userViewHTMLComponents.cshtml"))
        </div>
    </div><!--end #base-->
    <!-- END BASE -->
    <!-- BEGIN JAVASCRIPT -->
    <!-- END JAVASCRIPT -->

</body>
</html>


